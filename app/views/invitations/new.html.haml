%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @invitation, class: 'invite' do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = f.label :name, "Your Friend's Name"
            .row
              .col-sm-4
                =f.text_field :name, class: 'form-control'
          .form-group
            = f.label :email, "You Friend's Email Address"
            .row
              .col-sm-4
                = f.email_field :email, class: 'form-control'
          .form-group
            = f.label :message, 'Message (Optional)'
            .row
              .col-sm-6
                =f.text_area :message, placeholder: "You should join myflix!", rows: 6, class: 'form-control'
        %fieldset.form-group.action
          = f.submit 'Send Invitation', class: 'btn btn-default'
