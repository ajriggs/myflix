%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6' do |f|
        = f.hidden_field :invite_token, value: @invitation.token if @invitation
        %header
          %h1 Register
        %fieldset
          - if @invitation
            = f.email_field :email, label: 'Email Address', value: @invitation.email
          - else
            = f.email_field :email, label: 'Email Address'
          = f.password_field :password
          = f.text_field :full_name, label: 'Full Name'
        %fieldset.actions.control-group.col-sm-offset-2
          = f.submit 'Sign Up'
