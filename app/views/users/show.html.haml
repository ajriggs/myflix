%section.user.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %img(src="#{gravatar_image_string(@user)}")
          %h2 #{@user.full_name}'s video collection (#{@user.queue_items.count})
          = link_to 'Follow', user_connections_path(@user), method: :post, class: 'btn btn-default pull-right' unless current_user.cannot_follow? @user

        %table.table
          %thead
            %tr
              %th(width="30%") Video Title
              %th(width="15%") Genre
          %tbody
            = render partial: 'users/queue_item', collection: @user.queue_items

%section.user_reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h3 #{@user.full_name}'s Reviews (#{@user.reviews.count})
      %ul
        = render partial: 'users/review', collection: @user.reviews
